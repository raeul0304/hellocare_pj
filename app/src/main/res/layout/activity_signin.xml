<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signin_main"
    android:layout_width="412dp"
    android:layout_height="732dp"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/signin_title"
        android:layout_width="85dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!-- 이름 입력 -->
    <RelativeLayout
        android:id="@+id/signname"
        android:layout_width="366dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp">
        <TextView
            android:id="@+id/txt_signname"
            android:layout_width="31.78dp"
            android:layout_height="17.86dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:text="@string/name"/>
        <EditText
            android:id="@+id/signname_editline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:text="실명을 입력하세요"
            android:textSize="10dp"
            android:textColor="@color/grey"
            android:layout_alignParentBottom="true"
            android:onTextChanged="@{text}"/>
    </RelativeLayout>
    <!-- 생년월일 입력 -->
    <RelativeLayout
        android:id="@+id/signbirth"
        android:layout_width="366dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp">
        <TextView
            android:id="@+id/txt_signbirth"
            android:layout_width="57.67dp"
            android:layout_height="17.86dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:text="@string/sign_birth"/>
        <DatePicker
            android:id="@+id/spinner_birth"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_below="@+id/txt_signbirth">

        </DatePicker>

    </RelativeLayout>
    <!-- 회원가입 아이디/비번 (실제 메일) -->
    <RelativeLayout
        android:id="@+id/sign_id"
        android:layout_width="366dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp">
        <TextView
            android:id="@+id/txt_id"
            android:layout_width="57.67dp"
            android:layout_height="17.86dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:text="@string/sign_id"/>
        <EditText
            android:id="@+id/id_editline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:text="실제 이메일 주소를 입력하세요"
            android:textSize="10dp"
            android:textColor="@color/grey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sign_pw"
        android:layout_width="366dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="366dp">
        <TextView
            android:id="@+id/txt_pw"
            android:layout_width="57.67dp"
            android:layout_height="17.86dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:text="@string/sign_pw"/>
        <EditText
            android:id="@+id/pw_editline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:text="실제 이메일의 비밀번호를 입력하세요"
            android:textSize="10dp"
            android:textColor="@color/grey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="442dp">

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:text="@string/sign_type" />

        <RadioGroup
            android:id="@+id/sign_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/type_normal"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:text="일반"
                android:textSize="13sp"
                android:onClick="onJobRadioBtnClicked"/>

            <RadioButton
                android:id="@+id/type_doc"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:text="의사"
                android:textSize="13sp"
                android:onClick="onJobRadioBtnClicked"/>

            <RadioButton
                android:id="@+id/type_phar"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:text="약사"
                android:textSize="13sp"
                android:onClick="onJobRadioBtnClicked"/>
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="525dp">

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:text="@string/sign_gender" />

        <RadioGroup
            android:id="@+id/sign_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/gen_female"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_weight="2"
                android:text="여성"
                android:textSize="13sp"
                android:onClick="onGenderBtnClicked"/>

            <RadioButton
                android:id="@+id/gen_male"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="5"
                android:text="남성"
                android:textSize="13sp"
                android:onClick="onGenderBtnClikced"/>
        </RadioGroup>
    </RelativeLayout>

    <android.widget.Button
        android:id="@+id/sign_nextbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@color/blue"
        android:text="다음"
        android:textAlignment="center"
        android:textColor="@color/white"
         />
</RelativeLayout>